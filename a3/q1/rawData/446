<script id="hotjar_returning_user_trigger">
	// trigger hotjar event on the user's triggered_visit visit
	var visits = GRIST.STORAGE.get('grist_visits') || 0
	if ( ! jQuery.cookie('grist_visit') ){
		visits = visits + 1;
		GRIST.STORAGE.set('grist_visits', visits);
		jQuery.cookie('grist_visit', '1');
	}
	if ( 'function' === typeof hj && 'number' === typeof visits && visits > 1 ){
		hj('trigger', 'returning_user');
	}
</script>
