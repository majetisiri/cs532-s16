		loadHorizon();
		var oldOnLoad = window.onload;
		window.onload = function(){
	          	if (typeof oldOnLoad === 'function'){
		             	oldOnLoad();
		        }
		        
				Sailthru.setup({
		        	domain: 'horizon.computerworld.com',
		            useStoredTags: false
				});
		};
		if(console!=undefined){
			console.log('SAIL-23 fired Horizon');
		}
	
	})();
	</script>
				
	</body>
</html>