<script>

  $(document).ready(function() {

    $('html').css('overflow', 'auto');

    function hideCta() {
      $('html').css('overflow', 'hidden');
      $('#iframe-fullpage').hide();
      $('#frame-wrapper-full, #frame').css('overflow', 'visible');
      // $('#iframe-bottom-bar').show();
    }

    $(window).scroll(function(){
      if($(window).scrollTop() > ($('#iframe-fullpage').height() / 3) * 2) {
        hideCta();
      }
    });

    $('#frame-wrapper-full').hover(function(){
      hideCta();
    });
  });
</script>

