		<script>
			var disqus_shortname	= "grist";
			var disqus_identifier	= "wp320573";
			var disqus_title		= "This Chipotle conspiracy theory is the craziest thing we&#8217;ve read all day";
			var disqus_url			= "http://grist.org/food/this-chipotle-conspiracy-theory-is-the-craziest-thing-weve-read-all-day/";

			// When a user clicks a comment enable button, load disqus JS once
			jQuery('.comments-policy').on('click', function() {
					GRIST.STORAGE.set('comment_policy_closed', true);
				});
			jQuery('.button-outlined').on('click.grist-disqus', function(e){

				var $comments_container = jQuery('#comments'),
					are_comments_loaded = ( $comments_container.data('grist-comments-loaded') === 'loaded' );

				if( are_comments_loaded ) return;

				e.preventDefault();
				jQuery('.button-outlined').text('Loading...');

				// Control appearance of comment policy alert-box
				if( GRIST.STORAGE.is_enabled ) {
					var closed_policy = GRIST.STORAGE.get('comment_policy_closed');
					if ( ! closed_policy)
						jQuery('.comments-policy').removeClass('hide'); //As of foundation 5, adding a .hide on an alert box does NOT work, hence the extra div
					else
						jQuery('.comments-policy-small').removeClass('hide');
				}

				// Mark comments as loaded so we don't load them again
				jQuery('#comments').data('grist-comments-loaded', 'loaded');

				(function() {
					var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
					dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
					(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
				})();
			});
		</script>


